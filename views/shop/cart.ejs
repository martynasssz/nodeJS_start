    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <!-- check if we do have products -->
            <% if (products.length > 0) { %>
                <ul>
                    <% products.forEach(p => { %> <!--p simply is that object we passed t that cart products array on our backend code.-->
                        <li><%= p.productData.title %> (<%= p.qty %>)</li>
                    <% }) %>
                </ul>
            <% } else { %>
                <h1>No product in Cart!</h1>
            <% } %>

        </main>
        <%- include('../includes/end.ejs') %>